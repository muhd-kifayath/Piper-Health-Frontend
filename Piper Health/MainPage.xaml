<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Piper_Health.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="C:\Users\abina\Source\Repos\Piper-Health-Frontend\Piper Health\Resources\Images\pied_piper_logo.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="PiperOne Logo" />

            <Label
                Text="PiperHealth"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Making the world a healthy place."
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Slogan" />

            <Button
                x:Name="HomeNavigation"
                Text="Continue" 
                SemanticProperties.Hint="Contiue to home screen"
                BackgroundColor="Purple"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
